<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoFrame.MainPage"
             Title="Главная">
    <ContentPage.Resources>
        <Style TargetType="Border">
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <Border Margin="5" Stroke="Bisque">
        <Grid  RowDefinitions="*,auto">
                <StackLayout>

                    
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start">
                <CheckBox x:Name="Generation" HorizontalOptions="Center" VerticalOptions="Center">
                </CheckBox>
                <Label HorizontalOptions="Center" VerticalOptions="Center">
                    Режим генерации
                </Label>
                        <Border Background="#516C96" WidthRequest="30" HeightRequest="30" Margin='5' ToolTipProperties.Text="При выключении генерации останется активная картинка*">
                            <Label Text="!" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
            </StackLayout>
                    
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Start">
                    <Label Margin="5,0">Промпт:</Label>
                    <Label>Установленный текст промпта</Label>
            </StackLayout>
                <Border Background="White" Padding="10" Stroke="Bisque" Margin="10" IsEnabled="{Binding Source={x:Reference Generation}, Path=IsChecked}">
                    <Grid>

                            <Entry Placeholder="Введите новый промпт..." Margin="0,0,50,0">

                        </Entry>
                        <Button HorizontalOptions="End" Text="GO" CornerRadius="30" BackgroundColor="LawnGreen">
                                
                        </Button>
                    </Grid>
                   
                </Border>
                    <StackLayout Margin="10" >
                        <Label HorizontalOptions="Center">Активная картинка:</Label>
                        <Image Source="cog_outline.png" BackgroundColor="Wheat" MaximumHeightRequest="300" MaximumWidthRequest="200"/>
                    </StackLayout>
                    <StackLayout Margin="0,10" >
                        <Label HorizontalOptions="Center" FontSize="12">При установке картинки режим генерации выключится*</Label>
                        <Button Text="Установить картинку" CornerRadius="5" BackgroundColor="LawnGreen" Margin="10,0">

                        </Button>
                    </StackLayout>


                </StackLayout>

            </Grid>
        </Border>
    </ScrollView>

</ContentPage>
